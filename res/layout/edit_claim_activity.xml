<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditClaimActivity" >

    <Button
        android:id="@+id/editClaimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="finishEdit"
        android:text="Finish this Edit" />

    <TextView
        android:id="@+id/editClaimNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editClaimButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="Claim Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/editClaimBeginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editClaimNameTextView"
        android:layout_below="@+id/editClaimNameTextView"
        android:layout_marginTop="81dp"
        android:text="Begin Date"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/editClaimEndTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editClaimButton"
        android:layout_alignLeft="@+id/editClaimButton"
        android:layout_marginBottom="93dp"
        android:text="End Date"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editClaimNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editClaimNameTextView"
        android:layout_below="@+id/editClaimNameTextView"
        android:layout_marginTop="21dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editClaimBeginEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editClaimNameEditText"
        android:layout_centerVertical="true"
        android:ems="10" />

    <EditText
        android:id="@+id/editClaimEndEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editClaimButton"
        android:layout_alignLeft="@+id/editClaimEndTextView"
        android:layout_marginBottom="34dp"
        android:ems="10" />

</RelativeLayout>